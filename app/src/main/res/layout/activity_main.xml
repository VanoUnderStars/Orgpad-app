<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hw.orgpad.MainActivity">

    <include
    android:id="@+id/toolbar"
    layout="@layout/toolbar"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_above="@+id/button"
        android:layout_marginBottom="40dp"
        android:onClick="onClickGoals"
        android:text="Список целей"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="133dp"
        android:layout_height="53dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickSettings"
        android:text="Настройки расписания" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_below="@+id/button"
        android:layout_marginTop="40dp"
        android:onClick="onClickTimetable"
        android:text="Расписание на день"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="7"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="10dp"
        android:text="Orgpad project, Vano inc. 2019" />

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_row="1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="60dp"
        android:onClick="onClickAchievements"
        android:scaleType="centerCrop"
        android:src="@drawable/achievements" />
    
</RelativeLayout>
